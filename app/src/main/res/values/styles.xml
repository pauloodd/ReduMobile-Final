<resources>

    <style name="DefaultBlueButton">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:shadowColor">#158AC4</item>
        <item name="android:shadowDx">0.15</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="DefaultWhiteButton">
        <item name="android:textColor">#4DADD6</item>
        <item name="android:shadowColor">#FFFFFF</item>
        <item name="android:shadowDx">0.15</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="AppTheme"  parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowBackground">@color/menu_gb_color</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/actionbar_background</item>
        <!-- Support library compatibility -->
        <item name="background">@drawable/actionbar_background</item>
    </style>

    <color name="menu_gb_color">#1d89b2</color>
</resources>